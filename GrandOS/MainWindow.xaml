<Window x:Class="GrandOS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrandOS"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox StretchDirection="UpOnly" Stretch="UniformToFill">
        <Grid Background="#FF111A29" Height="450" Width="800">
            <Label x:Name="clockLabel" Content="20:30" HorizontalAlignment="Left" Foreground="White" FontSize="72" HorizontalContentAlignment="Center" Width="188" Margin="10,10,0,336"/>
        </Grid>
    </Viewbox>

</Window>
